package  {		import flash.events.MouseEvent;	import flash.events.TouchEvent;	import flash.ui.Multitouch;	import flash.ui.MultitouchInputMode;		import flash.events.Event;			import flash.display.MovieClip;	import flash.events.Event;	import com.greensock.TweenLite;	import com.greensock.*;	import com.greensock.easing.*;			public class Mainmenu extends MovieClip {				var mymain:Main		var achievementslist		var thumbs:Array				public function Mainmenu(inMain) {			// constructor code			//this.cacheAsBitmap = true			mymain = inMain			showDrawingPreviews()						createAchievementsList()									achievementslist.clearbutton.addEventListener(MouseEvent.CLICK,resetAchievements)			this.info.addEventListener(MouseEvent.CLICK,toggleAchievementsList)			this.consolebutton.addEventListener(MouseEvent.CLICK,toggleConsole)			this.clearbutton.addEventListener(MouseEvent.CLICK,clearConsole)									}							function resetAchievements(e:Event) {			trace("reset cookie")			mymain.achievementManager.cookie.clear()			mymain.console.log("cookie cleared")			this.achievementslist.textfield.text = mymain.achievementManager.getAchievementsList().list		}				//make array of drawings, loop though them and display,				private function showDrawingPreviews() {			thumbs = new Array() 			var thumb = new Thumbnail(this,mymain,new Horsedrawing(),0,new IconHorse())			thumb.x = 100			thumb.y = 200			thumb.cost = 0						addChild(thumb)						thumbs.push(thumb)						var thumb = new Thumbnail(this,mymain,new Cardrawing(),1)			thumb.x = 400			thumb.y = 200			thumb.cost = 5						addChild(thumb)			thumbs.push(thumb)												var thumb = new Thumbnail(this,mymain,new Rocketdrawing(),2)			thumb.x = 700			thumb.y = 200			thumb.cost = 50						addChild(thumb)			thumbs.push(thumb)												var thumb = new Thumbnail(this,mymain,new Dolphindrawing(),3)			thumb.x = 100			thumb.y = 450			thumb.cost = 100			//			addChild(thumb)			thumbs.push(thumb)																}						private function createAchievementsList() {			achievementslist = new AchievementsList()			achievementslist.x = mymain.padding			achievementslist.y = mymain.padding			this.addChild(achievementslist)			achievementslist.visible = false		}				public function show() {						this.achievementslist.textfield.text = mymain.achievementManager.getAchievementsList().list						//should the lock be open?			for each (var thumb in thumbs) {				thumb.checkLock()			}									x=-mymain.gameWidth			visible = true			mymain.gameState = "mainmenu"			TweenLite.to(this, 0.5, {x:0, ease:Cubic.easeInOut});					}				public function unlockAllThumbs() {			for each (var thumb:Thumbnail in thumbs) {				thumb.openLock()			}		}				public function hide() {			TweenLite.to(this, 0.5, {x:-mymain.gameWidth, ease:Cubic.easeInOut, onComplete:toggleVisibility});						mymain.gameState = "coloring"		}				private function toggleVisibility() {			this.visible = false		}		private function toggleAchievementsList(e:Event) {			if (achievementslist.visible == false ) {				achievementslist.visible = true			}			else achievementslist.visible = false		}		private function toggleConsole(e:Event) {			if (mymain.console.mytextfield.visible == false ) {				mymain.console.mytextfield.visible = true			}			else mymain.console.mytextfield.visible = false		}		private function clearConsole(e:Event) {			mymain.console.mytextfield.text = "cleared"		}					}	}