package  {	import flash.display.MovieClip	import flash.events.Event	import flash.events.TouchEvent	import com.greensock.TweenMax;	import com.greensock.*;	import com.greensock.easing.*;	import flash.utils.Timer	import flash.media.Sound	import flash.media.SoundChannel	import flash.media.SoundTransform		import flash.events.TimerEvent;	import mx.core.SoundAsset;	import flash.media.SoundTransform;	public class Bee extends MovieClip {		private var mymain:Main		private var tick:int=0		private var velx:Number=0		private var fullvelx:Number=20		private var ready:Boolean=true		public var spawnTimer:Timer		private var beesound:Sound		private var beesoundChannel:SoundChannel				public function Bee(inMain:Main) {			mymain = inMain			mymain.addChild(this)			visible = false			beesound = new BeeSound()			addEventListener(Event.ENTER_FRAME,onEnterFrame)			addEventListener(TouchEvent.TOUCH_BEGIN,onTouchBegin)			spawnTimer = new Timer(30000,0)			spawnTimer.addEventListener(TimerEvent.TIMER,spawn)			spawnTimer.start()		}		public function onEnterFrame(e:Event) {			tick++			velx = velx *0.93			x = x + velx			y = y + 2*Math.sin(0.2*tick)			if (x> (mymain.stage.fullScreenWidth - 0.2*width) ) {				x = 0				visible = false				ready=true				trace("bee offscreen")				spawnTimer.delay = 120000*Math.random()				spawnTimer.start()			}		}						public function spawn(e:Event) {			visible = true			y = 0.2*mymain.stage.fullScreenHeight + 0.6*mymain.stage.fullScreenHeight*Math.random()			velx = fullvelx			spawnTimer.reset()			if (beesoundChannel) beesoundChannel.stop()			//beesoundChannel = beesound.play()			//beesoundChannel.soundTransform = new SoundTransform(0.5,0)		}				private function onTouchBegin(e:Event) {			velx = fullvelx			if (beesoundChannel) beesoundChannel.stop()			//beesoundChannel = beesound.play()		}			}	}