package  {		import flash.display.MovieClip	import com.greensock.TweenMax	import com.greensock.*	import com.greensock.easing.*	import flash.events.MouseEvent;	import flash.events.TouchEvent;	import flash.events.Event		public class Message extends MovieClip {		public static const ICON_OK = "iconok"		public static const ICON_NONE = "iconnone"		public static const ICON_LOADING = "iconloading"				public function Message()  {					}						public function Hide(e:Event=null) {			visible = false		}				public function Show(str:String,icon=null) {			//default behavior			visible = true			confirm.visible = true			loading.visible = false			textfield.text = str			addEventListener(TouchEvent.TOUCH_BEGIN,Hide)			removeEventListener(Event.ENTER_FRAME,onEnterFrame)			//non clickaway			if (icon == Message.ICON_LOADING) {				confirm.visible = false				loading.visible = true				removeEventListener(TouchEvent.TOUCH_BEGIN,Hide)				addEventListener(Event.ENTER_FRAME,onEnterFrame)			}			else {				TweenMax.to(confirm, 0.2, {scaleX:"0.2", scaleY:"0.2", repeat:1, repeatDelay:0.0, yoyo:true});			}		}				public function onEnterFrame(e:Event) {			loading.rotation+=15		}	}	}