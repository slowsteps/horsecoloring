package  {		import flash.events.MouseEvent;	import flash.events.TouchEvent;	import flash.ui.Multitouch;	import flash.ui.MultitouchInputMode;	import flash.events.Event;	import flash.display.MovieClip;	import flash.events.Event;			public class Thumbnail extends MovieClip {				private var mymain:Main		private var mymainmenu:Mainmenu		private var myDrawingNumber:int		private var myDrawingClip:MovieClip						public function Thumbnail(inmymainmenu:Mainmenu,inmain:Main, drawingClip:MovieClip, drawingNumber:int) {			// constructor code						mymain = inmain			mymainmenu = inmymainmenu			myDrawingNumber = drawingNumber			myDrawingClip = drawingClip						var scalefactor = 0.9*this.width / drawingClip.width						drawingClip.width  = scalefactor*drawingClip.width			drawingClip.height = scalefactor*drawingClip.height			drawingClip.x = (this.width - drawingClip.width)/2			drawingClip.y = (this.height - drawingClip.height)/2									 			this.addChild(drawingClip)			addEventListener(MouseEvent.MOUSE_DOWN,onSelect)						addEventListener(TouchEvent.TOUCH_TAP,onSelect)					}				private function onSelect(e:Event) {						mymain.selectDrawing(myDrawingClip);			mymainmenu.hide()		}					}	}