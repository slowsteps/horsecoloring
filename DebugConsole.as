package  {		import flash.text.TextField    import flash.text.TextFormat	import flash.events.Event	import flash.events.MouseEvent	import flash.events.TouchEvent		import flash.display.MovieClip;	public class DebugConsole {		private var mymain:Main		public var mytextfield:TextField		private var minimized:Boolean = true		private var isDown:Boolean = false		private var savedX:Number = 0		private var savedY:Number = 0		public function DebugConsole(inMain:Main) {			mymain = inMain			createDebugUtil()					}				private function createDebugUtil() {						mytextfield = new TextField()						var myformat:TextFormat = new TextFormat()			myformat.font = "verdana"			myformat.size = 26						mytextfield.defaultTextFormat = myformat			mytextfield.multiline = true			mytextfield.wordWrap = true			mytextfield.background = true						//mytextfield.border = true			mytextfield.height = 20			mytextfield.width = mymain.stage.fullScreenWidth			mytextfield.y = 0			mytextfield.x = 0			mytextfield.visible = true			mytextfield.selectable = false			mymain.addChild(mytextfield)			mytextfield.addEventListener(MouseEvent.CLICK,onClick)								}		public function log(str:String) {						mytextfield.text = mytextfield.text + "\n" + str			mymain.setChildIndex(mytextfield, mymain.numChildren-1)   //bring to front		}				private function onClick(e:Event) {						if (minimized) {				mytextfield.height = 550				minimized = false			}			else {				mytextfield.height = 30				minimized = true			}		}	}	}